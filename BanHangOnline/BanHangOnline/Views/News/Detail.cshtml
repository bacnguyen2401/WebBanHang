@model BanHangOnline.Models.EF.News
@{
    ViewBag.Title = "Chi tiết tin tức";
}
<style>
    .news_section_container {
        margin-top: 200px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-News {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 15px;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%
    }
</style>

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<div class="container news_section_container">
    @if (Model != null)
    {

        <div class="row">
            <div class="col-md-12">
                <h1 class="title-News">@Model.Title </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                @Model.Description
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
               @Html.Raw(Model.Detail)
            </div>
        </div>
    }



</div>

