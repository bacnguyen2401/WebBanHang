@using BanHangOnline.Models.Common
@using (Ajax.BeginForm("AddSetting", "SettingSystem", new AjaxOptions
{
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess",
    OnFailure = "OnFailure"
}))
{
    <script>
        function OnSuccess(rs) {

        }

        function OnSuccess(rs) {

        }

        function OnBegin() {
            $("#load-page").html("Đang lưu...")
        }
    </script>
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary(true)*@
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                        <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">SEO</a></li>
                    </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                    <div class="tab-content">
                        <div class="active tab-pane" id="activity">
                            <div class="form-group">
                                <label>Tiêu đề trang</label>
                                <input type="text" name="SettingTitle" class="form-control" value="@SettingHelper.GetValue("SettingTitle")" />
                            </div>

                            <div class="form-group">
                                <label>Logo</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="text" name="SettingLogo" value="@SettingHelper.GetValue("SettingLogo")" id="SettingLogo" class="form-control"  />
                                    </div>
                                    <div class="input-group-append">
                                        <input type="button" id="iTaiAnh" class="btn btn-success" onclick="BrowseServer('SettingLogo')" value="Tải ảnh" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Hotline</label>
                                <input type="text" name="SettingHotline" value="@SettingHelper.GetValue("SettingHotline")" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" name="SettingEmail" value="@SettingHelper.GetValue("SettingEmail")" class="form-control" />
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <div class="tab-pane" id="timeline">
                            <div class="form-group">
                                <label>Tiêu đề SEO</label>
                                <input type="text" name="SettingTitleSeo" value="@SettingHelper.GetValue("SettingTitleSeo")" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Mô tả SEO</label>
                                <input type="text" name="SettingDesSeo" value="@SettingHelper.GetValue("SettingDesSeo")" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Từ khóa SEO</label>
                                <input type="text" name="SettingKeySeo" value="@SettingHelper.GetValue("SettingKeySeo")" class="form-control" />
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Lưu</button>
                    </div>
                </div><!-- /.card-body -->
            </div>
        </div>
    </div>

}



